<section id="cart_items">
    <div class="container">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li><a href="<%= root_path %>">Home</a></li>
                <li class="active">Shopping Cart</li>
            </ol>
        </div>
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Image</td>
                        <td class="description"></td>
                        <td class="size">Size</td>
                        <td class="price">Price</td>
                        <td class="quantity">Quantity</td>
                        <td class="total">Total</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody class="tbody"> </tbody>
            </table>
        </div>
    </div>
</section>
<!--/#cart_items-->

<section id="do_action">
    <div class="container">
        <div class="heading">
            <h3>What would you like to do next?</h3>
            <p>Choose if you have a discount code or reward points you want to use or would like to estimate your
                delivery cost.</p>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="chose_area">
                    <ul class="user_option">
                        <li>
                            <label>Use Gift Voucher</label>
                        </li>
                    </ul>
                    <ul class="user_info">
                        <li class="single_field zip-field">
                            <label>Zip Code:</label>
                            <input style="border: 1px solid#797977;" type="text" class="voucher_code" >
                        </li>
                    </ul>
                    <a class="btn btn-default voucher" href="javascript:void(0)">Get Voucher</a>
                </div>
            </div>
            
            <div class="col-sm-6">
                <div class="total_area" >
                    <ul>
                        <li>Cart Sub Total <span class="Cart_Sub_Total">$0</span></li>
                        <li>Eco Tax <span>$0</span></li>
                        <li>Shipping Cost <span>$30</span></li>
                        <li>Total <span class="totalOrder">$0</span></li>
                    </ul>
                    <% if user_signed_in? %>
                        <% if current_user.address.blank? %>
                            <a class="btn btn-warning" style="margin-left: 40px" href="<%= edit_user_registration_path %>">Please add your address while checkout</a>
                        <% else %>
                            <span style="float: left">Address:  </span>
                            <h5  class="address" style="color: red "> 
                                <%= current_user.address %> </br>SDT  <%= current_user.mobile %>
                            </h5>
                            <a class="btn btn-default check_out" href="javascript:void(0)"  id="btnFetch" style="display: none">Check Out</a>
                        <% end %>
                    <% else %>
                        <a href="javascript:void(0)" class="btn btn-default <%= user_signed_in? ? "check_out" : ""  %>" onClick="alert('you must login to the checkout')">Check Out</a>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/#do_action-->

<script id="list-cart-template" type="text/x-handlebars-template">
    {{#if carts.length }}
    {{#each carts}} 
        <tr class="list-cart" id={{id}}>
            <td class="cart_product" style="width: 70px;">
                <a href="/product-details/{{ name_product}}~{{id}}"><img style="width:100px; height:100px" src="{{image_product}}"></a>
            </td>
            <td class="cart_name">
                <h4><a href="">{{name_product}}</a></h4>
            </td>
            <td class="cart_name">
                <h4><a href="">{{size_product}}</a></h4>
            </td>
            <td class="cart_price">
                <p>${{price_product}}</p>
            </td>
            <td class="cart_quantity" >
                <div class="cart_quantity_button">
                    <button class="cart_quantity_up" > + </button>
                    <input class="cart_quantity_input" type="number" name="quantity" value="{{quantity}}" size="2"  min="1" max="20" >
                    <button class="cart_quantity_down" > - </button>
                </div>
            </td>
            <td class="cart_total">
                <p class="cart_total_price">${{ total_price}}</p>
            </td>
            <td class="cart_delete">
                <button class="cart_quantity_delete"><i class="fa fa-times"></i></button>
            </td>
        </tr>
    {{/each}}
{{else}}
    <style type="text/css">
    thead,.voucher{
        display:none
    }
    </style>
    <h2 style=" text-align: center;"> Shopping cart is empty </h2>
{{/if}}

</script>
